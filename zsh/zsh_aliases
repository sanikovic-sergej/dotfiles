ollama-sync() {
    local MODEL_NAMES=$(ollama list | tail -n +2 | cut -d " " -f1)

    # Check if ollama list returned any data
    if [[ -z "$MODEL_NAMES" ]]; then
        echo "No models found."
        return 1
    fi

    while IFS= read -r MODEL; do
        ollama pull "$MODEL"
    done <<< "$MODEL_NAMES"

    echo "All models have been synced."
}
